<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/recycler_item_padding">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_item_height"
        cardview:cardCornerRadius="@dimen/recycler_item_corner_radius"
        android:padding="@dimen/recycler_item_padding">
        <TextView
            android:padding="@dimen/recycler_item_padding"
            android:id="@+id/text_display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical" />
        <LinearLayout
            android:layout_width="@dimen/recyler_item_content_width"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="right">
            <Button
                android:id="@+id/button_task_action_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"/>
            <Button
                android:id="@+id/button_task_action_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/text_elapsed_time"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>